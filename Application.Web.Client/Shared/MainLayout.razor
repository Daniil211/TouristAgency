@using Application.Web.Client.Data.Authentication
@using Application.Web.Client.Data.Authentication
@inject WebsiteAuthenticator WebsiteAuthenticator
@inherits LayoutComponentBase

<PageTitle>Tourist Agency</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a @onclick="TryLogout" target="_blank">Logout</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{
    private async Task TryLogout()
    {
        await WebsiteAuthenticator.LogoutAsync();
    }
}
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.MobileClient.FoundedTours" BackgroundColor="#FFFCF2"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Margin="5,30,5,30">
                <Image Source="logoIcon.png" HeightRequest="40" />
                <Label Text="Путешествие мечты" TextColor="Black" FontSize="20" FontAttributes="Bold" Margin="0,7,5,0"/>
                <Button Text="На главную" Style="{StaticResource buttonPodStyle}"  WidthRequest="140" Clicked="ButtonMain_Clicked"/>
            </StackLayout> 
            <Label Text="Здесь будут найденные туры по вашим запросам"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
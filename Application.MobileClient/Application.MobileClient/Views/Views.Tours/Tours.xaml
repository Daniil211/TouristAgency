<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application.MobileClient.Views.Views.Tours.Tours">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Tour" Command="{Binding AddNewTourCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <CollectionView 
            x:Name="ToursCollection"
            ItemsSource="{Binding Tours}"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedTour}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={x:Reference ToursCollection}, Path=BindingContext.DeleteTourCommand}"
                                           CommandParameter="{Binding}"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <StackLayout Padding="10">
                            <Label Text="{Binding TourId}" FontSize="Medium" />
                            <Label Text="{Binding TourName}" FontSize="Subtitle" />
                            <Label Text="{Binding Duration}" FontSize="Medium" />
                            <Label Text="{Binding Price}" FontSize="Subtitle" />
                            <Label Text="{Binding VideoTour}" FontSize="Medium" />
                            <Label Text="{Binding InSale}" FontSize="Subtitle" />
                            <Label Text="{Binding Image}" FontSize="Medium" />
                            <Label Text="{Binding Time}" FontSize="Subtitle" />
                            <Label Text="{Binding Description}" FontSize="Subtitle" />
                        </StackLayout>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
<Window x:Class="Application.Desktop.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.Desktop"
        xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
        mc:Ignorable="d"
        Title="Регистрация" Height="468" Width="400" 
        Icon="Icons/logoIcon.png" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="SingleBorderWindow" 
        MinHeight="300" MinWidth="400">
    <Grid  HorizontalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"></RowDefinition>
            <RowDefinition Height="223*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" >
            <Label>Логин</Label>
            <TextBox x:Name="login_tb"></TextBox>
            <Label>Пароль</Label>
            <TextBox x:Name="pass_tb"></TextBox>


        </StackPanel>
    </Grid>
</Window>

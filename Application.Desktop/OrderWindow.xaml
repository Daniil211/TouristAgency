<Window x:Class="Application.Desktop.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.Desktop"
        mc:Ignorable="d"
        Title="Оформление заявки" 
        Height="300" Width="400" 
        Icon="Icons/logoIcon.png" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="SingleBorderWindow" 
        MinHeight="300" MinWidth="400">
    <Grid>
        <StackPanel >
            <Label>Выберите тур</Label>
            <ComboBox x:Name="Tour_cb" ></ComboBox>
            <Label>Выберите транспорт</Label>
            <ComboBox x:Name="Transport_cb" DisplayMemberPath="TypeOfTransport"></ComboBox>
            <Button Click="Button_Click" Style="{DynamicResource buttonFind}" Margin="0,20,0,0">Оставить заявку</Button>
        </StackPanel>
    </Grid>
</Window>

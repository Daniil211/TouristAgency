<Window x:Class="Application.Desktop.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.Desktop"
        mc:Ignorable="d"
        Title="OrderWindow" 
        Height="300" Width="400" 
        Icon="Icons/logoIcon.png" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="SingleBorderWindow" 
        MinHeight="300" MinWidth="400">
    <Grid>
        <StackPanel >
            <Label>ФИО</Label>
            <TextBox x:Name="FIO_tb"></TextBox>
            <Label>Дата рождения</Label>
            <TextBox x:Name="DateOfB_tb"></TextBox>
            <Label>Тур</Label>
            <ComboBox x:Name="Tour_cb" DisplayMemberPath="TourName"></ComboBox>
            <Label>Номер телефона</Label>
            <TextBox x:Name="Phone_tb"></TextBox>
            <Button Click="Button_Click" Style="{DynamicResource buttonFind}" Margin="0,20,0,0">Оставить заявку</Button>
        </StackPanel>
    </Grid>
</Window>
